<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_verbal_game_fragment"
    tools:context="parisnanterre.fr.lexify.verbalgame.VerbalGameFragment"
    android:background="@drawable/background_color">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/fragment_verbal_game_txt_yourTurn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="It's computer turn !"
            android:textAlignment="center"
            android:textAppearance="@style/YourTurnStyle"
            android:textColor="#FFFFFF"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center|top">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fragment_computer_game_left"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:text="Mot 1"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:text="Mot 2"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Mot 3"
                            android:layout_marginTop="5dp"
                            android:background="@color/grey"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Mot 4"
                            android:layout_marginTop="5dp"
                            android:background="@color/grey"
                            android:textColor="#FFFFFF"/>

                    </TableLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center|top"
                    android:layout_weight="1">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/fragment_computer_game_right"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:text="Mot 1"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:text="Mot 2"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Mot 3"
                            android:layout_marginTop="5dp"
                            android:background="@color/grey"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Mot 4"
                            android:layout_marginTop="5dp"
                            android:background="@color/grey"
                            android:textColor="#FFFFFF"/>

                    </TableLayout>




                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/fragment_verbal_game_end">

            <TextView
                android:id="@+id/fragment_verbal_game_txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminé ! Vous avez deviné le mot ou pas en ..."
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/YourTurnStyle"
                android:textColor="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="Manche suivante"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Abandon"/>

            </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/fragment_computer_game_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:ellipsize="start"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:hint=""
                android:textColorHint="#9b9b9b"
                android:background="#FFFFFF"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textAutoCorrect|textNoSuggestions"
                android:ems="10"
                android:layout_marginBottom="5dp"
                />





            <LinearLayout
                android:id="@+id/fragment_verbal_game_layout_chrono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    >

                    <ProgressBar
                        android:id="@+id/fragment_verbal_game_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@drawable/drawable_circularprogressbar" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:text="cc"
                        android:textColor="#FFFFFF"
                        android:id="@+id/fragment_verbal_game_timer"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>
