<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_about_game_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="parisnanterre.fr.lexify.application.AboutGameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_about_main_text_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Header"
            android:textAlignment="center"
            android:textAppearance="@style/LexifyTitleStyle" />

        <ImageView
            android:id="@+id/activity_main_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/lexifylogo512"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/fragment_about_affiche_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:text="cc"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/fragment_social_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_about_github"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_github_logo"
               />

            <ImageView
                android:id="@+id/fragment_about_website"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_grid_world" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_about_application_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/info_icon"
            android:text="@string/AboutGame"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/fragment_about_regles_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/rules_icon"
            android:text="@string/rule"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/fragment_about_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/home_icon"
            android:text="@string/Mainmenu"
            android:textSize="9sp"/>

    </LinearLayout>

</FrameLayout>
