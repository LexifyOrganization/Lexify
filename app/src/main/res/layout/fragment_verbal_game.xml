<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_verbal_game_fragment"
    tools:context="parisnanterre.fr.lexify.application.VerbalGameFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/fragment_verbal_game_txt_manche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/fragment_verbal_game_txt_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/fragment_verbal_game_txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="" />

        <Button
            android:id="@+id/fragment_verbal_game_btn_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="True" />

        <Button
            android:id="@+id/fragment_verbal_game_btn_false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="False" />

        <Button
            android:id="@+id/fragment_verbal_game_btn_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pass" />


    </LinearLayout>

</FrameLayout>
