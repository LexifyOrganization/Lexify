<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="parisnanterre.fr.lexify.settings.SettingsActivity"
    android:background="@drawable/background_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/activity_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:textAlignment="center"
        android:textAppearance="@style/LexifyTitleStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/activity_settings_txt_level_difficulty"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/level"
                android:textSize="17sp"
                android:textColor="#FFFFFF"/>

            <Spinner
                android:id="@+id/activity_settings_spinner_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/activity_settings_languages"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/Languages"
                android:textSize="17sp"
                android:textColor="#FFFFFF"/>

            <Spinner
                android:id="@+id/activity_languages_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
