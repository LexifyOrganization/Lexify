<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_verbal_game_signing_fragment"
    tools:context="parisnanterre.fr.lexify.verbalgame.VerbalGameSigningFragment"
    android:background="@color/backgroundBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/fragment_verbal_game_signing_playerturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/Itsyourturn"
            android:textAppearance="@style/VerbalGameSigning"/>


        <TextView
            android:id="@+id/fragment_verbal_game_signing_instructions"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/Instructins"
            android:textAppearance="@style/VerbalGameInstructions"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="-12dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/smartphone_icon" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/arrow_icon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="35dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="80dp"

                    android:src="@drawable/person_icon" />

                <TextView
                    android:id="@+id/fragment_verbal_game_signing_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="player 1"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_verbal_game_signing_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/rules"
            android:textAppearance="@style/VerbalGameRules"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="2"

        >

        <Button
            android:id="@+id/fragment_verbal_game_signing_btn_change_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Changeplayersnames"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fragment_verbal_game_signing_btn_choose_words"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ChooseWords"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/fragment_verbal_game_signing_btn_play_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start"
            android:background="@drawable/buttonshape"
         />



    </LinearLayout>


    </LinearLayout>


</FrameLayout>
